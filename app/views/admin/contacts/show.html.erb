<h1>Info about <%= @contact.name %></h1>

<p>
  <strong>Key:</strong>
  <%= @contact.key %>
</p>

<p>
  <strong>Name:</strong>
  <%= @contact.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong>Message:</strong>
  <%= @contact.message %>
</p>

<h2>Visits</h2>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>When?</th>
    </tr>
  </thead>
  <tbody>
    <% @contact.visits.sort {|a,b| b.when <=> a.when}.each do |visit| %>
      <tr>
        <td><%= visit.page %></td>
        <td><%= visit.when.strftime('%d-%m-%Y %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
