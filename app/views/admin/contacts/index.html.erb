<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.sort {|a,b| b.created_at <=> a.created_at}.each do |contact| %>
      <tr>
        <td><%= contact.key %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= link_to 'Show', admin_contact_path(contact.key) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
